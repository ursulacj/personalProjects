<%- include('../partials/header') %>

<h1>New Note</h1>

<textarea rows="25" cols="75" name="content" form="noteform"></textarea>

<form name="noteform" action="/notes" method="POST">
    <label>Title: 
        <input type="text" name="title">
    </label>
    <label>Mood:
        <select name="mood">
            <option value="Happy">Happy</option>
            <option value="Sad">Sad</option>
            <option value="Other">Other</option>
        </select>
    </label><br>
    <label>Tag:
        <select name="tag">
            <option value="Finance + Career">Finance + Career</option>
            <option value="Life Skills">Life Skills</option>
            <option value="Mental Health">Mental Health</option>
            <option value="Friendship">Friendship</option>
            <option value="Love + Relationships">Love + Relationships</option>
        </select>
    <label>Share Note?
        <input type="checkbox" name="public">
    </label><br>
    <input type="submit" value="Save Note">
</form>


<%- include('../partials/footer') %>